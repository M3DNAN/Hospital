<br />
<div class="row">
    <div class="col-9 mb-3">
        <h2>My Appointments</h2>
    </div>
</div>
<br />

<div class="row">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col" class="table-dark">Num</th>
                <th scope="col" class="table-dark">Patient Name</th>
                <th scope="col" class="table-dark">Doctor Name</th>
                <th scope="col" class="table-dark">Time</th>
                <th scope="col" class="table-dark">Date</th>
            </tr>
        </thead>  
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr class="table-secondary">
                        <th scope="row">@item.Id</th>
                        <td class="table-secondary">@item.PatientName</td>
                        <td class="table-secondary">@item.DoctorName</td>
                        <td class="table-secondary">@item.Time.ToString()</td>
                        <td class="table-secondary">@item.Date.ToString()</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>